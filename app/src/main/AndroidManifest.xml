<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="expoplatform.arabplast">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_arrow"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">


        <activity
            android:name="expoplatform.arabplast.LogoActivity"
            android:theme="@style/Logo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="expoplatform.arabplast.Exhibitions"
            android:label="@string/title_activity_exhibitions"/>
        <activity
            android:name="expoplatform.arabplast.AboutExpo"
            android:label="@string/title_activity_about_expo"
            android:theme="@android:style/Theme.Holo"/>
        <activity
            android:name=".ActionBarMenu"
            android:label="@string/title_activity_main_menu"/>
        <activity
            android:name="expoplatform.arabplast.IventInfo"
            android:label="@string/title_activity_ivent_info"
            android:theme="@style/IventInfo"/>
    </application>

</manifest>
